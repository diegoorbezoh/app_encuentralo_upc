<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comparador_precios">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="424dp"
        android:layout_height="763dp"
        android:src="@drawable/comparador_precios"
        tools:layout_editor_absoluteX="-11dp"
        tools:layout_editor_absoluteY="-14dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRITERIOS"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="275dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Desde"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="61dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hasta"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="63dp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="119dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:text="Categoria"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="63dp" />

    <EditText
        android:id="@+id/txtCategoria"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Seleccione"
        app:layout_constraintTop_toBottomOf="@+id/txtImportHasta"
        tools:layout_editor_absoluteX="212dp" />


    <EditText
        android:id="@+id/txtImportDesde"
        android:layout_width="145dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="330dp" />

    <EditText
        android:id="@+id/txtImportHasta"
        android:layout_width="143dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/txtImportDesde"
        tools:layout_editor_absoluteX="212dp" />

    <EditText
        android:id="@+id/txtPalabraClave"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtCategoria"
        tools:layout_editor_absoluteX="215dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Palabra clave"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_editor_absoluteX="61dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:text="BUSCAR"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="571dp" />


</androidx.constraintlayout.widget.ConstraintLayout>